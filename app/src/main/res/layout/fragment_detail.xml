<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.luizcarlos.sunshine.DetailActivity.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_detail_day"
            android:text="@string/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/text_detail_date"
            android:text="December, 2014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#646464"
            android:fontFamily="sans-serif-condensed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                >

                <TextView
                    android:id="@+id/temp_max_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="72sp"
                    android:text="40°"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/temp_min_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="20°"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_weather_detail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher"/>

                <TextView
                    android:id="@+id/text_sesson_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summer"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#646464"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/text_umidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidty:"
            android:textSize="22sp"
            android:paddingBottom="4dp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/text_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pressure:"
            android:textSize="22sp"
            android:paddingBottom="4dp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/text_windy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Windy:"
            android:paddingBottom="4dp"
            android:textSize="22sp"
            android:textStyle=""
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

</ScrollView>
