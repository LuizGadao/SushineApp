<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luizcarlos.sunshine" >

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.luizcarlos.sunshine.MyActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.luizcarlos.sunshine.DetailActivity" />
        </activity>

        <provider
            android:name=".data.WeatherProvider"
            android:authorities="com.luizcarlos.sunshine" />

        <service
            android:name=".service.SunshineService"
            android:enabled="true"
            android:exported="false" >

            <intent-filter>
                <action android:name="INTENT_SERVICE"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>

        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
